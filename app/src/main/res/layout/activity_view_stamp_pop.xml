<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/view_pop_shape"
    tools:context="hellow.mobapde.com.helloworld.ViewAdventurePopActivity">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/red_stamp"
        android:id="@+id/iv_view_stamp_pop_image"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="12dp"
        android:text="Insert Stamp Title Here"
        android:textColor="@color/profileFontColor"
        android:textAlignment="center"
        android:fontFamily="sans-serif-medium"
        android:textSize="18dp"
        android:id="@+id/tv_view_stamp_pop_title"/>

</LinearLayout>